{
  "name": "hermes-channel",
  "version": "2.1.0",
  "description": "client-side messaging channel for sending data from one browser tab to another",
  "main": "dist/hermes.js",
  "module": "dist/hermes.js",
  "types": "dist/hermes.d.ts",
  "scripts": {
    "prepublish": "yarn build",
    "build": "tsc",
    "lint": "eslint *.ts"
  },
  "files": [
    "dist/*",
    "src/*"
  ],
  "author": "Arnelle Balane <arnellebalane@gmail.com> (https://arnellebalane.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.2",
    "eslint": "^8.5.0",
    "eslint-config-arnellebalane": "^5.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "extends": [
      "arnellebalane"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2015
    },
    "env": {
      "browser": true,
      "worker": true,
      "amd": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint"
  }
}